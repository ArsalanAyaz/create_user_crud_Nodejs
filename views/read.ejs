<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Professional Card</title>
    <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-zinc-900 flex flex-col items-center justify-center min-h-screen text-white">
    <a href="/" class="text-blue-400 mb-6 hover:text-blue-500">Go to Home</a>

    <div class="max-w-4xl w-full grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-4 p-6">
        <% if (users.length > 0) { %>
            <% users.forEach((user) => { %>
                <div class="bg-zinc-800 rounded-lg shadow-lg overflow-hidden flex flex-col items-center p-6">
                    <div class="flex items-center justify-center">
                        <img src="<%= user.image %>" alt="Profile Image" class="w-24 h-24 rounded-full object-cover border-4 border-white">
                    </div>
                    <div class="text-center mt-4">
                        <h1 class="text-xl font-semibold mb-2"><%= user.name %></h1>
                        <h5 class="text-gray-400 mb-4"><%= user.email %></h5>
                        <div class="flex justify-center space-x-4">
                            <a href="/edit/<%= user._id %>" class="text-blue-400 hover:text-blue-500">Edit User</a>
                            <a href="/delete/<%= user._id %>" class="text-red-400 hover:text-red-500">Delete User</a>
                        </div>
                    </div>
                </div>
            <% }) %>
        <% } else { %>
            <h1 class="text-center text-2xl">No users yet</h1>
        <% } %>
    </div>
</body>
</html>
